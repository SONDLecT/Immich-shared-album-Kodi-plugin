<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="1">
    <defaultcontrol always="true">100</defaultcontrol>
    <controls>
        <!-- Black background - always visible -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">-</texture>
        </control>

        <!-- Background image 1 - full screen with fade -->
        <control type="image" id="100">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio aligny="center" alignx="center">keep</aspectratio>
            <fadetime>1000</fadetime>
        </control>

        <!-- Background image 2 - for crossfade effect -->
        <control type="image" id="200">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio aligny="center" alignx="center">keep</aspectratio>
            <fadetime>1000</fadetime>
            <visible>false</visible>
        </control>

        <!-- Semi-transparent overlay at bottom for text -->
        <control type="image" id="300">
            <left>0</left>
            <top>880</top>
            <width>1920</width>
            <height>200</height>
            <texture colordiffuse="CC000000">-</texture>
        </control>

        <!-- Date/Time label - prominent -->
        <control type="label" id="102">
            <left>60</left>
            <top>910</top>
            <width>1800</width>
            <height>45</height>
            <font>font_MainMenu</font>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>

        <!-- Location label -->
        <control type="label" id="103">
            <left>60</left>
            <top>965</top>
            <width>1800</width>
            <height>35</height>
            <font>font13</font>
            <textcolor>FFDDDDDD</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>

        <!-- Description/Camera label -->
        <control type="label" id="101">
            <left>60</left>
            <top>1010</top>
            <width>1800</width>
            <height>30</height>
            <font>font12</font>
            <textcolor>FFAAAAAA</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>
    </controls>
</window>
