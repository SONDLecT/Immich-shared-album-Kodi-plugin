<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="1">
    <defaultcontrol always="true">101</defaultcontrol>
    <animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="500">WindowClose</animation>
    <controls>
        <!-- Black background - always visible -->
        <control type="image" id="1000">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">-</texture>
            <visible>true</visible>
        </control>

        <!-- Main image display -->
        <control type="image" id="101">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio aligny="center" alignx="center">keep</aspectratio>
            <texture>-</texture>
            <visible>true</visible>
        </control>

        <!-- Second image for crossfade transitions -->
        <control type="image" id="102">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio aligny="center" alignx="center">keep</aspectratio>
            <texture>-</texture>
            <visible>true</visible>
        </control>

        <!-- Semi-transparent gradient overlay at bottom for text -->
        <control type="image" id="300">
            <left>0</left>
            <top>800</top>
            <width>1920</width>
            <height>280</height>
            <texture colordiffuse="99000000">-</texture>
            <visible>true</visible>
        </control>

        <!-- Date/Time label - prominent -->
        <control type="label" id="201">
            <left>60</left>
            <top>900</top>
            <width>1800</width>
            <height>50</height>
            <font>font_MainMenu</font>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>

        <!-- Location label -->
        <control type="label" id="202">
            <left>60</left>
            <top>960</top>
            <width>1800</width>
            <height>40</height>
            <font>font13</font>
            <textcolor>FFDDDDDD</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>

        <!-- Description/Camera label -->
        <control type="label" id="203">
            <left>60</left>
            <top>1010</top>
            <width>1800</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>FFAAAAAA</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>
    </controls>
</window>
