        </control>

        <!-- Description/camera label -->
        <control type="label" id="203">
            <left>50</left>
            <top>990</top>
            <width>1820</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>FF999999</textcolor>
            <shadowcolor>FF000000</shadowcolor>
            <label></label>
        </control>
    </controls>
</window>
