<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <setting id="server_url" type="text" label="Immich Server URL" default=""/>
    <setting id="api_key" type="text" label="API Key" option="hidden" default=""/>
    <setting id="source_mode" type="enum" label="Photo Source" values="Random|Album|Shared Albums|People|Favorites" default="0"/>
    <setting id="album_id" type="text" label="Album ID (if Album selected)" default=""/>
    <setting id="people_ids" type="text" label="People IDs (comma-separated)" default=""/>
    <setting id="display_time" type="number" label="Display Time (seconds)" default="10"/>
    <setting id="show_info" type="bool" label="Show Photo Info" default="true"/>
</settings>
