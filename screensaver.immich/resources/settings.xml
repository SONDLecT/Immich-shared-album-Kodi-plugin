<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <category label="Server Settings">
        <setting id="server_url" type="text" label="Immich Server URL" default=""/>
        <setting id="api_key" type="text" label="API Key" option="hidden" default=""/>
    </category>
    <category label="Photo Source">
        <setting id="source_mode" type="labelenum" label="Photo Source"
            values="Random (All Photos)|Specific Album|All Shared Albums|Specific People|Favorites" default="0"/>
        <setting id="album_id" type="text" label="Album ID" default=""
            visible="eq(-1,1)" enable="eq(-1,1)"/>
        <setting id="people_ids" type="text" label="People IDs (comma-separated)" default=""
            visible="eq(-2,3)" enable="eq(-2,3)"/>
    </category>
    <category label="Appearance">
        <setting id="display_time" type="slider" label="Display Time (seconds)" default="10" range="3,1,60"/>
        <setting id="show_info" type="bool" label="Show Photo Info" default="true"/>
    </category>
</settings>
