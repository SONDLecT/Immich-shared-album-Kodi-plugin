<?xml version="1.0" encoding="UTF-8"?>
<addon id="screensaver.immich" name="Immich Photos" version="1.0.0" provider-name="Immich Kodi Community">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="imagedecoder.heif" optional="true"/>
    </requires>
    <extension point="xbmc.python.script" library="entrypoint.py">
        <provides>screensaver</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Display photos from your Immich server</summary>
        <description lang="en_GB">A screensaver that displays photos from your self-hosted Immich server.</description>
        <disclaimer lang="en_GB">Requires a running Immich server and valid API key.</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.png</fanart>
        </assets>
    </extension>
</addon>
