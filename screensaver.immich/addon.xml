<?xml version="1.0" encoding="UTF-8"?>
<addon id="screensaver.immich" name="Immich Photos" version="1.0.1" provider-name="Immich Kodi Community">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
    </requires>
    <extension point="xbmc.ui.screensaver" library="default.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Display photos from your Immich server</summary>
        <description lang="en_GB">A screensaver that displays photos from your self-hosted Immich server. Choose random photos, specific albums, shared albums, or photos of specific people.</description>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.png</fanart>
        </assets>
    </extension>
</addon>
